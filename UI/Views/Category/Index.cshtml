@using Domain.DTO.UIDtos
@model List<CategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Breadcrumb section -->
<div class="breadcrumb-section" style="background-image: url(../../../assets/img/inner-pages/breadcrumb-bg1.png), linear-gradient(87.29deg, #FDF8E7 0%, #E4FFF0 99.71%);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <div class="banner-content">
                    <h1>Categories</h1>
                    <ul class="breadcrumb-list">
                        <li><a href="/Home/Index">Home</a></li>
                        <li>Categories</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb section -->
<!-- Start Category Grid section -->
<div class="category-grid-section pt-110 mb-110">
    <div class="container">
        <div class="row gy-5 row-cols-xxl-6 row-cols-xl-5 row-cols-md-4 row-cols-sm-3 row-cols-2">
            @foreach (var item in Model)
            {
                <div class="col wow animate fadeInDown" data-wow-delay="200ms" data-wow-duration="1500ms">
                    <div class="category-card">
                        <a href="/Category/CategoryAuctions/@item.Id" class="category-img">
                            <img src="@item.PrivewImageUrl" alt="">
                        </a>
                        <div class="category-content">
                            <h5><a href="/Category/CategoryAuctions/@item.Id">@item.Name</a></h5>
                            @*<span>@item.Items.Count Item</span>
                            *@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>